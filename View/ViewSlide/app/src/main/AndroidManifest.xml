<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hezd.viewslide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SlideByScrollerActivity"/>
        <activity android:name=".ui.SlideByAnimationActivity"/>
        <activity android:name=".ui.SlideByLayoutParamsActivity"/>
        <activity android:name=".ui.SlideByOffsetTBActivity"/>
        <activity android:name=".ui.SlideByOffsetLRActivity"/>
        <activity android:name=".ui.SlideByLayoutActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>